#:kivy 1.8.0
#:import Factory kivy.factory.Factory
#:import screenmanager kivy.uix.screenmanager
#:import p parameters
# note that this requires the kgui folder to be in PYTHONPATH or sys.path, unless the 
# interpreter is started in this folder because the import is happening in kivy/lang/parser.py 

FloatLayout:
    StatusBar:
        height: p.status_bar_height
        size_hint: 1, None
        top: root.top
    MainTabs:
        id: tabs
        height: root.height - p.status_bar_height
        size_hint_y: None

<StatusBar@BoxLayout>:
    canvas:
        Color:
            rgba: p.red if 'error' in app.state else p.accent
        Rectangle:
            size: self.size
            pos: self.pos
    orientation: 'horizontal'
    StackLayout:
        id: left
        orientation: 'lr-tb'
        width: self.minimum_width
        x: root.x
        Label:
            id: state
            text: "state: " + app.state
            size_hint_x: None
            size: self.texture_size
            font_size: root.height - 5
            padding: 7, 0
    StackLayout:
        id: right
        orientation: 'rl-tb'
        width: self.minimum_width
        right: root.right
        ConnectionIcon:
            id: con
            size_hint: None, None
            size: 0, root.height
            topright: root.right, root.top
        TimeLabel:
            id: time
            text: self.time
            size_hint_x: None
            size: self.texture_size
            font_size: root.height - 4
            padding: 7, 0

<MainTabs@TabbedPanel>:
    tab_pos: 'bottom_mid'
    tab_width: p.screen_width/3
    tab_height: p.tab_height
    do_default_tab: False
    HomeTab:
        id: home_tab
    FileTab:
        id: file_tab
    SettingTab:
        id: set_tab

# HOME ########################################################################

<HomeTab@TabbedPanelItem>:
    background_down: '' # dadurch nimmt es background color an, sowieso immer mit dessen opacity auch waere es ein bild
    background_normal: p.kgui_dir+'/Logos/Black.png'
    background_color: p.background
    canvas:
        Rectangle:
            source: p.kgui_dir+'/Logos/HomeIcon.png'
            size: 100, 100
            pos: 50, 0
    FloatLayout:
        Background:
            pos_hint: {'x':0,'y':0}
            size_hint: 1,1
        ProgressBar:
            enabled: True if app.state == 'printing' or app.state == 'paused' or app.state == 'pausing' else False
            id: progress_bar
            max: 1
            value: app.progress
            size_hint: None, None
            size: p.screen_width-2*p.h_padding+2, p.progress_bar_height
            pos: p.h_padding-1, p.tab_height + p.h_padding
        Label:
            text: app.print_time if app.state == 'printing' or app.state == 'paused' or app.state == 'pausing' else ""
            size_hint: None, None
            size: p.screen_width-2*p.padding, p.normal_font
            text_size: self.size
            font_size: p.normal_font
            x: p.h_padding - 2
            top: progress_bar.y - 8
            halign: 'left'
            valign: 'bottom'
        Btn_Stop:
            on_release: app.send_stop()
            id: btn_stop
            size: 118,118
            center_y: progress_bar.top + p.padding + p.btn_height/2
            center_x: p.screen_width - p.btn_height/2 - p.h_padding
        Btn_Play:
            on_release:
                if self.paused: app.send_play(); self.paused=False;
                else:           app.send_pause(); self.paused=True;
            size: btn_stop.size
            y: btn_stop.y
            right: btn_stop.x
        Label:
            id: l_filename
            text: app.print_title if app.state == 'printing' or app.state == 'paused' or app.state == 'pausing' else ""
            size_hint: None, None
            size: 280,134
            text_size: self.size
            font_size: p.large_font
            x: p.h_padding-3
            center_y: btn_stop.center_y
            shorten: True
            halign: 'left'
            valign: 'middle'
        Divider:
            id: top_divider
            y: btn_stop.center_y + p.btn_height/2 + p.padding
        ScreenManager:
            current: 'printingscreen' if app.state == 'printing' else 'homescreen'
            transition: screenmanager.NoTransition()
            id: hs_manager
            size_hint: None, None
            size: p.screen_width, p.screen_height-top_divider.top
            pos: root.x, top_divider.top
            HomeScreen:
            PrintingScreen:
        Btn_Temp:
            id: temp_T1
            heater_id: "T1"
            on_release: Factory.ExtTempPopup(instance=self).open()
            large_value: "{:3.0f}°C".format(app.temp[self.heater_id][1])
            small_value: "{:3.0f}".format(app.temp[self.heater_id][0]) if app.temp[self.heater_id][0] != 0 else "Off"
            red: app.temp[self.heater_id][1] > 50
            width: 130
            right: temp_bed.right
            center_y: p.padding+top_divider.top+p.btn_height/2
        Btn_Extruder:
            heater_id: 'T1'
            x: p.h_padding
            center_y: temp_T1.center_y
        Btn_Temp:
            id: temp_T0
            heater_id: "T0"
            on_release: Factory.ExtTempOffsetPopup(instance=self).open()
            large_value: "{:3.0f}°C".format(app.temp[self.heater_id][1])
            small_value: "{:3.0f}".format(app.temp[self.heater_id][0]) if app.temp[self.heater_id][0] != 0 else "Off"
            red: app.temp[self.heater_id][1] > 50
            width: 130
            right: temp_bed.right
            center_y: p.padding+p.btn_height+temp_T1.center_y
        Btn_Extruder:
            heater_id: 'T0'
            x: p.h_padding
            center_y: temp_T0.center_y
        Btn_Temp:
            on_release: Factory.BedTempPopup(instance=self).open()
            id: temp_bed
            large_value: "{:3.0f}°C".format(app.temp['B'][1])
            small_value: "{:3.0f}".format(app.temp['B'][0]) if app.temp['B'][0] != 0 else "Off"
            red: app.temp['B'][1] > 50
            x: p.h_padding
            center_y: p.padding+p.btn_height+temp_T0.center_y
            canvas.before:
                Color:
                    rgba: p.nozzle
                #:set bwu 188
                #:set bwu10 (bwu+p.icon_radius*2)/10.
                #:set bwo 188-2*35
                #:set bwo10 (bwo+p.icon_radius*2)/10.
                #:set bh 35
                #:set by 15
                Rectangle:
                    size: bwo, bh
                    pos: self.center_x - bwo/2, self.y + by
                Triangle:
                    points: (self.center_x - bwu/2, self.y + by, self.center_x - bwo/2, self.y + by, self.center_x - bwo/2, self.y + bh + by)
                Triangle:
                    points: (self.center_x + bwu/2, self.y + by, self.center_x + bwo/2, self.y + by, self.center_x + bwo/2, self.y + bh + by)
                Line:
                    width: 5
                    points: (self.center_x + bwu/2, self.y + by, self.center_x + bwo/2, self.y + bh + by,        self.center_x - bwo/2, self.y + bh + by,  self.center_x - bwu/2, self.y + by)
                    close: True
                Color:
                    rgba: (0,0,0,0.2)
                Line:
                    width: 1
                    points: self.center_x + bwo10, self.y+by+bh,    self.center_x + bwu10, self.y+by
                Line:
                    width: 1
                    points: self.center_x + bwo10, self.y+by+bh,    self.center_x + 1 + bwu10, self.y+by
                Line:
                    width: 1
                    points: self.center_x - bwo10, self.y+by+bh,     self.center_x - bwu10, self.y+by
                Line:
                    width: 1
                    points: self.center_x - bwo10, self.y+by+bh,    self.center_x - 1 - bwu10, self.y+by
                Line:
                    width: 1
                    points: self.center_x + 3*bwo10, self.y+by+bh,    self.center_x + 3*bwu10, self.y+by
                Line:
                    width: 1
                    points: self.center_x + 3*bwo10, self.y+by+bh,    self.center_x + 1 + 3*bwu10, self.y+by
                Line:
                    width: 1
                    points: self.center_x - 3*bwo10, self.y+by+bh,    self.center_x - 3*bwu10, self.y+by
                Line:
                    width: 1
                    points: self.center_x - 3*bwo10, self.y+by+bh,    self.center_x - 1 - 3*bwu10, self.y+by

<Btn_Extruder@BaseButton>:
    size: 41, p.btn_height - p.radius*2
    heater_id: 'T0'
    selected: False
    canvas:
        Color:
            rgba: p.nozzle_selected if self.selected else p.nozzle
        Rectangle:
            size: self.width, self.height-self.width/2
            pos: self.x, self.y + root.width/2
        Triangle:
            points: (self.x, self.y + self.width/2,    self.center_x, self.y,    self.right, self.y + self.width/2)
        Line:
            width: p.radius
            points: (self.x, self.y + self.width/2,    self.center_x, self.y,    self.right, self.y + self.width/2,    self.right, self.top,    self.x, self.top) 
            close: True
    Label:
        text: root.heater_id
        bold: True
        color: p.background
        center_x: root.center_x
        center_y: root.center_y       
        font_size: p.large_font

<PrintingScreen@Screen>:
    name: "printingscreen"
    FloatLayout:
        Btn_Temp:
            id: z_adjust
            on_release: Factory.ZAdjustPopup(instance=self).open()
            small_value: "Nozzle Height"
            right: root.width -p.h_padding
            center_y: root.height - p.h_padding - p.btn_height/2
        Btn_Temp:
            id: pressure_advance
            on_release: Factory.PressureAdvancePopup(instance=self).open()
            small_value: "Pressure Advance"
            right: root.width - p.h_padding
            center_y: z_adjust.center_y - p.padding - p.btn_height
        Btn_Temp:
            id: speed
            on_release: Factory.SpeedPopup(instance=self).open()
            small_value: "Print Speed"
            x: p.padding
            center_y: z_adjust.center_y
        Btn_Temp:
            id: flow
            on_release: Factory.FlowPopup(instance=self).open()
            small_value: "Material Flow"
            x: p.padding
            center_y: speed.center_y - p.padding - p.btn_height
        Btn_Temp:
            id: fan
            on_release: Factory.FanPopup(instance=self).open()
            small_value: "Print Cooling"
            x: p.padding
            center_y: flow.center_y - p.padding - p.btn_height

<HomeScreen@Screen>:
    name: "homescreen"
    FloatLayout:
        Btn_Arrow:
            dir_right: True
            id: btn_right_B
            size: p.btn_height-10, p.btn_height
            y: p.padding
            x: p.screen_width- p.h_padding
        Btn_Arrow:
            dir_right: True
            id: btn_right_A
            size: p.btn_height-10, p.btn_height
            y: 2*p.padding+p.btn_height
            x: btn_right_B.x
        Btn_Triple:
            id: btn_tr_B
            y: btn_right_B.y
            right: p.screen_width- p.h_padding
        Btn_Triple:
            id: btn_tr_A
            y: btn_right_A.y
            right: p.screen_width- p.h_padding
        Btn_Arrow:
            id: btn_left_B
            size: p.btn_height-10, p.btn_height
            y: btn_right_B.y
            right: btn_tr_B.x
        Btn_Arrow:
            id: btn_left_A
            size: p.btn_height-10, p.btn_height
            y: btn_tr_A.y
            right: btn_tr_A.x
        Btn_Outline:
            id: btn_calibrate
            on_release: app.send_calibrate()
            enabled: app.printer_objects_available
            title: "Mesh Bed Leveling"
            size: btn_tr_B.size
            pos: btn_tr_A.x, 3*p.padding+2*p.btn_height
        Btn_TripleZ:
            id: btn_tr_Z
            height: xy_field.height
            h1: self.height/3
            h2: self.height/3
            h3: self.height/3
            width: self.height/3
            right: btn_calibrate.right
            top: root.height-p.padding-p.status_bar_height
        XyField:
            id: xy_field
            size_hint: None, None
            height: 3*p.btn_height + 2*p.padding
            width: self.height
            x: p.h_padding
            top: root.height-p.padding-p.status_bar_height
            enabled: app.printer_objects_available and app.homed['x'] and app.homed['y']
            RoundButton:
                on_release: app.send_home('xy')
                enabled: app.printer_objects_available and (not app.homed['x'] or not app.homed['y'])
                visible: not app.homed['x'] or not app.homed['y']
                size: 64, 64
                pos: xy_field.pos
                canvas:
                    Color:
                        rgba: (0,0,0,0) if not self.visible else (1,1,1,1) if self.enabled else p.button_disabled
                    Rectangle:
                        source: p.kgui_dir+'/Logos/HomeIcon.png'
                        size: self.size
                        pos: self.pos
        Label:
            id: xy_display
            size: self.texture_size
            size_hint: None, None
            x: xy_field.x
            top: xy_field.top
            color: p.button_outline
            font_size: p.normal_font
            text: xy_field.display

# BUTTONS  ########################################################################

<BaseButton>:
    title: ''
    size_hint: None, None
    Label:
        text: root.title
        size: root.size
        color: (1,1,1,1) if root.enabled else p.button_disabled
        text_size: self.size
        pos: root.pos        
        font_size: p.normal_font
        valign: 'middle'
        halign: 'center'

<RoundButton@BaseButton>:
    canvas:
        Color:
            rgba: p.translucent_white if self.pressed and self.enabled else (0,0,0,0)
        RoundedRectangle:
            radius: (p.radius,)
            size: self.size
            pos: self.pos

<RectangleButton>:
    canvas:
        Color:
            rgba: p.translucent_white if self.pressed and self.enabled else (0,0,0,0)
        Rectangle:
            size: self.size
            pos: self.pos

<Btn_Stop@RoundButton>:
    enabled: True if app.state == 'printing' or app.state == 'paused' or app.state == 'pausing' else False
    canvas.before:
        Color:
            rgba: p.red if self.enabled else (0,0,0,0)
        Rectangle:
            pos: self.center_x-p.btn_height/2,self.center_y-p.btn_height/2
            size: p.btn_height,p.btn_height

<Btn_Play@RoundButton>:
    #:set h p.btn_height*1.155
    paused: False if app.state == 'printing' else True
    enabled: True if app.state == 'printing' or app.state == 'paused' or app.state == 'pausing' else False
    canvas.before:
        Color:
            rgba: 1,1,1,1 if self.enabled and not self.paused else 0
        Rectangle:
            pos: self.center_x-p.btn_height/2, self.center_y-p.btn_height/2
            size: 0.38*p.btn_height,p.btn_height
        Rectangle:
            pos: self.center_x+p.btn_height/2-0.4*p.btn_height, self.center_y-p.btn_height/2
            size: 0.38*p.btn_height,p.btn_height
    canvas:
        Color:
            rgba: 1,1,1,1 if self.enabled and self.paused else 0
        Triangle:
            points: self.center_x-p.btn_height/2, self.center_y- h/2, self.center_x-p.btn_height/2, self.center_y+ h/2, self.center_x+p.btn_height/2, self.center_y

<Btn@RoundButton>:
    title: ''
    canvas:
        Color:
            rgba: p.button
        RoundedRectangle:
            radius: (p.radius,)
            pos: self.pos
            size: self.size

<Btn_Outline@RoundButton>:
    title: ''
    canvas.before:
        Color:
            rgba: p.button_outline
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, p.radius)
            width: 1

<Btn_Arrow@RoundButton>:
    #:set v 44
    #:set w 22
    dir_right: False
    canvas.before:
        Color:
            rgba: p.button_outline
        Line:
            points: (self.x+self.width/2-w/2, self.center_y- v/2, self.x+self.width/2-w/2, self.center_y+ v/2, self.x+self.width/2+w/2, self.center_y) if self.dir_right else (self.x+self.width/2+w/2, self.center_y- v/2, self.x+self.width/2+w/2, self.center_y+ v/2, self.x+self.width/2-w/2, self.center_y)
            close: True
            width: 1

<Btn_Triple@Widget>:
    filament_color: (1,0,0)
    filament_amount: 0.5
    title1: 'Unload'
    title2: ''
    title3: 'Load'
    w1: 78
    w2: 78
    w3: 78
    size_hint: None, None
    size: self.w1+self.w2+self.w3, p.btn_height
    canvas:
        Color:
            rgb: root.filament_color
        RoundedRectangle:
            size: root.size
            pos: root.pos
            radius: (p.radius,)
        Color:
            rgba: p.background
        Rectangle:
            size: root.width * (1-root.filament_amount), root.height
            pos: root.x + root.filament_amount * root.width, root.y
        Color:
            rgba: p.button_outline
        Line:
            width: 1
            rounded_rectangle: (self.x, self.y, self.width, self.height, p.radius)
        Rectangle:
            pos: self.x+self.w1, self.y+6
            size: 1, self.height-12
        Rectangle:
            pos: self.x+self.w1+1+self.w2, self.y+6
            size: 1, self.height-12
    BaseButton:
        size: root.w1, root.height
        pos: root.pos
        title: root.title1
        enabled: app.printer_objects_available
        canvas:
            Color:
                rgba: p.translucent_white if self.pressed else (0,0,0,0)
            RoundedRectangle:
                radius: (p.radius, 0,0,p.radius)
                size: self.size
                pos: self.pos
    BaseButton:
        size: root.w2, root.height
        pos: root.x + root.w1,root.y
        title: root.title2
        enabled: app.printer_objects_available
        canvas:
            Color:
                rgba: p.translucent_white if self.pressed else (0,0,0,0)
            Rectangle:
                size: self.size
                pos: self.pos
    BaseButton:
        size: root.w3, root.height
        pos: root.x + root.w1+root.w2,root.y
        title: root.title3
        enabled: app.printer_objects_available
        canvas:
            Color:
                rgba: p.translucent_white if self.pressed else (0,0,0,0)
            RoundedRectangle:
                radius: (0,p.radius,p.radius,0)
                size: self.size
                pos: self.pos

<Btn_TripleZ@Widget>:
    h1: 85
    h2: 85
    h3: 85
    size_hint: None, None
    canvas:
        Color:
            rgba: p.button_outline
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, p.radius)
        Rectangle:
            pos: self.x+6, self.y+self.h1
            size: self.width-12,1
        Rectangle:
            pos: self.x+6, self.y+self.h1+self.h2
            size: self.width-12,1
    #:set t 12
    #:set u 24 #Triangle has this size x2
    BaseButton:
        on_press: app.send_z_up() if p.invert_z_controls else app.send_z_down()
        on_release: app.send_z_stop()
        enabled: app.homed['z']
        size: root.width, root.h1
        pos: root.x, root.y
        canvas.before:
            Color:
                rgba: p.translucent_white if self.pressed else (0,0,0,0)
            RoundedRectangle:
                radius: (0,0,p.radius,p.radius)
                size: self.size
                pos: self.pos
            Color:
                rgba: (1,1,1,1) if self.enabled else p.button_disabled
            Triangle:
                points: self.center_x-u,self.center_y+t,  self.center_x+u,self.center_y+t,  self.center_x,self.center_y-t
    BaseButton:
        on_release: app.send_home('z')
        size: root.width, root.h2
        pos: root.x, root.y+root.h1
        enabled: app.printer_objects_available
        canvas:
            Color:
                rgba: (1,1,1,1) if self.enabled else p.button_disabled
            Rectangle:
                source: p.kgui_dir+'/Logos/HomeIcon.png'
                size: 64, 64
                pos: self.center_x-32, self.center_y-32
            Color:
                rgba: p.translucent_white if self.pressed else (0,0,0,0)
            Rectangle:
                size: self.size
                pos: self.pos
    BaseButton:
        on_press: app.send_z_down() if p.invert_z_controls else app.send_z_up()
        on_release: app.send_z_stop()
        enabled: app.homed['z']
        size: root.width, root.h3
        pos: root.x, root.top-root.h3
        canvas.before:
            Color:
                rgba: p.translucent_white if self.pressed else (0,0,0,0)
            RoundedRectangle:
                radius: (p.radius,p.radius,0,0)
                size: self.size
                pos: self.pos
            Color:
                rgba: (1,1,1,1) if self.enabled else p.button_disabled
            Triangle:
                points: self.center_x-u,self.center_y-t,  self.center_x+u,self.center_y-t,  self.center_x,self.center_y+t

<Btn_Temp@RoundButton>:
    red: False
    large_value: "-"
    small_value: "-"
    size: 190, 100
    Label:
        color: p.red if root.red else (1,1,1,1)
        text: root.large_value
        size_hint: None, None
        size: root.width, p.btn_height+13#to compensate for the font being 6px below top when set to 'top'
        text_size: self.size
        center_y: root.center_y
        right: root.right - 25
        font_size: p.large_font
        valign: 'top'
        halign: 'right'
    Label:
        color: p.light_gray
        text: root.small_value
        size_hint: None, None
        size: root.width, p.btn_height+9
        text_size: self.size
        center_y: root.center_y
        right: root.right - 25
        font_size: p.normal_font
        valign: 'bottom'
        halign: 'right'

<Btn_P_Cancel@BaseButton>:
    title: "Cancel"
    single: False
    height: 70
    canvas:
        Color:
            rgba: p.divider
        Rectangle:
            size: self.width, 1
            pos: self.x, self.top-1
        Color:# Highlight pressed button
            rgba: p.translucent_white if self.pressed else (0,0,0,0)    
        RoundedRectangle:
            radius:(0,0,p.radius,p.popup_radius) if self.single else (0,0,0, p.popup_radius)
            pos: self.pos
            size: self.size

<Btn_P_Confirm@BaseButton>:
    title: "Confirm"
    height: 70
    enabled: False
    canvas:
        Color:
            rgba: p.divider
        Rectangle:
            size: self.width, 1
            pos: self.x, self.top-1
        Rectangle:
            size: 1, self.height
            pos: self.pos
        Color:# Highlight pressed button
            rgba: p.translucent_white if self.pressed else (0,0,0,0)    
        RoundedRectangle:
            radius: (0,0,p.radius,0)
            pos: self.pos
            size: self.size

<Btn_Slider>:
    #:set t 9  #half of width
    #:set j 15
    x: self.px-self.width/2-self.offset
    size: 68,60
