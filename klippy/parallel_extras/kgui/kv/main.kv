#:import p parallel_extras.kgui.parameters

# Root widget and other global widgets

FloatLayout:
    StatusBar:
        id: status_bar
        height: p.status_bar_height
        size_hint: 1, None
        top: root.top
    MainTabs:
        id: tabs
        height: root.height - p.status_bar_height
        size_hint_y: None

<MainTabs@TabbedPanel>:
    tab_pos: 'bottom_mid'
    tab_width: p.screen_width/4
    tab_height: p.tab_height
    do_default_tab: False
    HomeTab:
        id: home_tab
    TimelineTab:
        id: timeline_tab
    FileTab:
        id: file_tab
    SettingTab:
        id: set_tab

<StatusBar>:
    orientation: 'horizontal'
    canvas:
        Color:
            rgba: p.red if 'error' in app.state else p.accent if app.print_state == 'printing' else p.flat_accent
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: dp(300), dp(3)
            pos: self.animation_pos - dp(300), self.top - dp(3)
    StackLayout:
        id: left
        orientation: 'lr-tb'
        width: self.minimum_width
        x: root.x
        Label:
            id: state
            text: "error" if app.state == "error" else "initializing" if app.state == "startup" else "" if app.print_state in ("no print job", "aborted", "finished") else app.print_state
            size_hint_x: None
            size: self.texture_size
            font_size: p.normal_font
            padding: dp(7), 0
            color: p.status_bar
    StackLayout:
        id: right
        orientation: 'rl-tb'
        width: self.minimum_width
        right: root.right
        ConnectionIcon:
            id: con
            size_hint: None, None
            size: 0, root.height
            topright: root.right, root.top
        CuraConnectionIcon:
            id: s_con
            size_hint: None, None
            size: 0, root.height
        TimeLabel:
            id: time
            text: self.time
            size_hint_x: None
            size: self.texture_size
            font_size: p.normal_font
            padding: dp(7), 0
            color: p.status_bar

<CuraConnectionIcon>:
    canvas:
        Color:
            rgba: p.status_bar if app.cura_connected else (0, 0, 0, 0)
        Rectangle:
            size: dp(24), dp(24)
            pos: self.center_x - dp(12), self.center_y - dp(12)
            source: p.kgui_dir + "/logos/cura.png"
    width: self.height - dp(4) if app.cura_connected else 0
