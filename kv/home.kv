            id: scroll_view
            size_hint: None, None
            size: root.width, container.height-btn_cancel.height-left_title.height
            pos: root.x, btn_cancel.top
            StackLayout:
                id: option_stack
                size_hint_y: None
                height: self.minimum_height
                spacing: [0]
                padding: [p.padding - o_padding]
        Btn_P_Cancel:
            id: btn_cancel
            width: root.width/2
            pos: root.pos
            on_release: root.dismiss()
        Btn_P_Confirm:
            enabled: True
            text: "Select" if root.selected_guid is not None else "Who cares"
            width: root.width/2
            pos: root.center_x, root.y
            on_release: pass

<Option>:
    #: set o_padding 10
    size: 123, 84
    padding: o_padding, o_padding

    canvas.before:
        Color:
            rgba: self.option_color
        RoundedRectangle:
            size: self.width - 2*o_padding, self.height - 2*o_padding
            pos: self.x + o_padding, self.y + o_padding
            radius: (p.icon_radius,)
        Color:
            rgba: (1,1,1,0.3) if self.selected else p.btn_outline
        Line:
            width: 1
            rounded_rectangle: (self.x+o_padding, self.y+o_padding, self.width-2*o_padding, self.height-2*o_padding, p.icon_radius)
        Color:
            rgba: p.translucent_white if self.selected else (0,0,0,0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: (p.radius,)

<OptionDivider>:
    #: set od_h 10
    size_hint: 1, None
    height: 50 - 2 * o_padding
    actual_height: float(50 - 2 * o_padding)
    canvas.before:
        Color:
            rgba: p.popup
        Rectangle:
            size: self.width, float(50 - 2 * o_padding)
            pos: self.pos
        Color:
            rgba: p.medium_light_gray
        Triangle:
            points: self.center_x, self.center_y - od_h,    self.center_x - od_h*2, self.center_y + od_h,    self.center_x + od_h*2, self.center_y + od_h
     